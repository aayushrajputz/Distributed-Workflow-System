{
  "name": "distributed-notes-backend",
  "version": "1.0.0",
  "description": "Distributed Notes Collaboration System Backend with real-time editing capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "worker": "node services/backgroundWorker.js",
    "dev:worker": "nodemon services/backgroundWorker.js",
    "start:all": "concurrently \"npm run start\" \"npm run worker\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/(models|controllers|middleware)",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch --runInBand",
    "test:integration:coverage": "jest --testPathPattern=tests/integration --coverage --runInBand",
    "test:e2e": "jest --testPathPattern=tests/integration/endToEnd --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --watch --testPathPattern=tests/(models|controllers|middleware)",
    "test:ci": "jest --ci --coverage --runInBand --detectOpenHandles",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seed.js",
    "demo:auth": "node examples/auth-demo.js",
    "demo:notes": "node examples/notes-crud-demo.js",
    "demo:realtime": "node examples/realtime-collaboration-demo.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm audit && npm outdated"
  },
  "keywords": [
    "notes",
    "collaboration",
    "real-time",
    "websockets",
    "distributed",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "axios-retry": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "p-timeout": "^6.1.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "prom-client": "^15.1.3",
    "socket.io": "^4.7.4",
    "systeminformation": "^5.27.7",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-extended": "^4.0.1",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^13.3.3",
    "nodemon": "^3.0.2",
    "sinon": "^15.2.0",
    "socket.io-client": "^4.7.4",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "bugs": {
    "url": "https://github.com/your-username/your-repo/issues"
  },
  "homepage": "your-repo-url#readme"
}
