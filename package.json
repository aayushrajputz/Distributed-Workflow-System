{
  "name": "distributed-workflow-system",
  "version": "1.0.0",
  "description": "A comprehensive workflow management system with real-time integrations",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "workflow",
    "automation",
    "management",
    "distributed",
    "real-time",
    "integrations",
    "slack",
    "github",
    "webhooks",
    "2fa",
    "security"
  ],
  "author": "Aayush Rajput",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aayushrajputz/Distributed-Workflow-System.git"
  },
  "bugs": {
    "url": "https://github.com/aayushrajputz/Distributed-Workflow-System/issues"
  },
  "homepage": "https://github.com/aayushrajputz/Distributed-Workflow-System#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
